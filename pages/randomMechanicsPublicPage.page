<apex:page id="randomMechanicsPublicPage" standardController="MC_Mechanic__c" extensions="MC_PublicPageController" showHeader="false" sideBar="false" docType="html-5.0" standardStylesheets="false" applyHtmlTag="false">
    <html  xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" lang="en">
        <META HTTP-EQUIV="Content-type" CONTENT="text/html; charset=UTF-8"/>
        <apex:stylesheet value="{!URLFOR($Resource.SLDSZIP, 'salesforce-lightning-design-system/assets/styles/salesforce-lightning-design-system-vf.min.css')}" />
        <apex:includeScript value="{!$Resource.jquery}"/>
        <script>
            var j$ = jQuery.noConflict();
        </script>
        <style>
            .msgIcon {
                display: none!important
            }
            .customMessage * {
                color: #fff!important
            }
            .customMessage {
                margin: 5px 0!important;
                max-width: 1280px;
                opacity: 1!important;
                width: 100%;
                font-size: 12px;
                border: 0px;
                padding-left: 10px;
            }
            .message {
                opacity: .1
            }
        </style>

        <div class="piotrblach">
            <article class="slds-card" style="margin-top: 10px; padding-bottom: 10px; width: 80%; margin: auto;">

                <div class="slds-tabs--default">
                    <ul class="slds-tabs--default__nav" role="tablist">
                        <li class="slds-tabs--default__item slds-text-heading--label slds-active" title="{!$Label.CD_Offer}" role="presentation">
                            <a class="slds-tabs--default__link" href="javascript:void(0);" role="tab" tabindex="0" aria-selected="true" aria-controls="offer-tab" id="offer-tab-item">{!$Label.CD_Offer}</a>
                        </li>
                        <li class="slds-tabs--default__item slds-text-heading--label" title="{!$Label.CD_Contact}" role="presentation">
                            <a class="slds-tabs--default__link" href="javascript:void(0);" role="tab" tabindex="-1" aria-selected="false" aria-controls="contact-tab" id="contact-tab-item">{!$Label.CD_Contact}</a>
                        </li>
                        <li class="slds-tabs--default__item slds-text-heading--label" title="{!$Label.CD_Random_mechanics}" role="presentation">
                            <a class="slds-tabs--default__link" href="javascript:void(0);" role="tab" tabindex="-1" aria-selected="false" aria-controls="random-mechanics-tab" id="random-mechanics-tab-item">{!$Label.CD_Random_mechanics}</a>
                        </li>
                    </ul>
                    <div id="offer-tab" class="slds-tabs--default__content slds-show" role="tabpanel" aria-labelledby="offer-tab-item" style="padding: 0px;">
                        Offer content
                    </div>

                    <div id="contact-tab" class="slds-tabs--default__content slds-hide" role="tabpanel" aria-labelledby="contact-tab-item" style="padding: 0px;">
                        <form action="https://webto.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8" method="POST">
                            <div class="slds-card__header slds-grid">
                                <header class="slds-media slds-media_center slds-has-flexi-truncate">
                                    <div class="slds-media__body">
                                        <h2>
                                            <span class="slds-text-heading_small">{!$Label.CD_Submit_New_Lead}</span>
                                        </h2>
                                    </div>
                                </header>
                            </div>
                            <div class="slds-card__body slds-card__body_inner">
                                <fieldset class="slds-form--compound">
                                    <input type="hidden" name="oid" value="00D1r000001GTDi"/>
                                    <input type="hidden" name="retURL" value="https://mechaniccontracts-developer-edition.eu12.force.com/publicSite/?showThankUMsg=true"/>
                                    <input type="hidden" name="lead_source" value="Web"/>
                                    <div class="slds-form-element__group">
                                        <div class="slds-form-element__row">
                                            <div class="slds-form-element slds-size--1-of-2">
                                                <label class="slds-form-element__label" for="first_name">{!$ObjectType.Lead.fields.FirstName.Label}</label>
                                                <input class="slds-input" id="first_name" maxlength="40" name="first_name" required="true" type="text"/><br/>

                                            </div>
                                            <div class="slds-form-element slds-size--1-of-2">
                                                <label class="slds-form-element__label" for="last_name">{!$ObjectType.Lead.fields.LastName.Label}</label>
                                                <input class="slds-input" id="last_name" maxlength="80" name="last_name" required="true" type="text" /><br/>

                                            </div>
                                        </div>
                                        <div class="slds-form-element__row">
                                            <div class="slds-form-element slds-size--1-of-2">
                                                <label class="slds-form-element__label" for="email">{!$ObjectType.Lead.fields.Email.Label}</label>
                                                <input class="slds-input" id="email" maxlength="80" name="email" required="true" type="email" /><br/>

                                            </div>
                                            <div class="slds-form-element slds-size--1-of-2">
                                                <label class="slds-form-element__label" for="company">{!$ObjectType.Lead.fields.Company.Label}</label>
                                                <input class="slds-input"  id="company" maxlength="40" name="company" required="true" type="text" /><br/>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                            <footer class="slds-card__footer">
                                <center>
                                    <input type="submit" class="slds-button slds-button--brand" name="submit"/>
                                </center>
                            </footer>
                        </form>
                    </div>
                    <div id="random-mechanics-tab" class="slds-tabs--default__content slds-hide" role="tabpanel" aria-labelledby="random-mechanics-tab-item" style="padding: 0px;">
                        <div class="slds-page-header">
                            <div class="slds-media">
                                <div class="slds-media__figure">
                                      <span class="slds-icon_container slds-icon-standard-opportunity">
                                        <svg aria-hidden="true" class="slds-icon">
                                          <use xlink:href="apexpages/slds/latest/assets/icons/standard-sprite/svg/symbols.svg#groups"></use>
                                        </svg>
                                      </span>
                                </div>
                                <div class="slds-media__body">
                                    <h1 class="slds-page-header__title slds-truncate slds-align-middle">{!$Label.CD_Random_mechanics}</h1>
                                </div>
                            </div>
                        </div>
                        <table class="slds-table slds-table_bordered slds-table_cell-buffer">
                            <thead>
                            <tr class="slds-text-title_caps">
                                <th scope="col">
                                    <div class="slds-truncate" title="{!$ObjectType.MC_Mechanic__c.fields.MC_FirstName__c.Label}">{!$ObjectType.MC_Mechanic__c.fields.MC_FirstName__c.Label}</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate" title="{!$ObjectType.MC_Mechanic__c.fields.MC_LastName__c.Label}">{!$ObjectType.MC_Mechanic__c.fields.MC_LastName__c.Label}</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate" title="{!$ObjectType.MC_Mechanic__c.fields.MC_City__c.Label}">{!$ObjectType.MC_Mechanic__c.fields.MC_City__c.Label}</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate" title="{!$ObjectType.MC_Mechanic__c.fields.MC_Country__c.Label}">{!$ObjectType.MC_Mechanic__c.fields.MC_Country__c.Label}</div>
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            <apex:repeat value="{!allMechanics}" var="mechanic">
                                <tr>
                                    <td data-label="{!$ObjectType.MC_Mechanic__c.fields.MC_FirstName__c.Label}">
                                        <div class="slds-truncate" title="{!$ObjectType.MC_Mechanic__c.fields.MC_FirstName__c.Label}">{!mechanic.MC_FirstName__c}</div>
                                    </td>
                                    <td data-label="{!$ObjectType.MC_Mechanic__c.fields.MC_LastName__c.Label}">
                                        <div class="slds-truncate" title="{!$ObjectType.MC_Mechanic__c.fields.MC_LastName__c.Label}">{!mechanic.MC_LastName__c}</div>
                                    </td>
                                    <td data-label="{!$ObjectType.MC_Mechanic__c.fields.MC_City__c.Label}">
                                        <div class="slds-truncate" title="{!$ObjectType.MC_Mechanic__c.fields.MC_City__c.Label}">{!mechanic.MC_City__c}</div>
                                    </td>
                                    <td data-label="{!$ObjectType.MC_Mechanic__c.fields.MC_Country__c.Label}">
                                        <div class="slds-truncate" title="{!$ObjectType.MC_Mechanic__c.fields.MC_Country__c.Label}">{!mechanic.MC_Country__c}</div>
                                    </td>
                                </tr>
                            </apex:repeat>
                            </tbody>
                        </table>
                    </div>
                </div>

            </article>

            <div class="slds">
                <div class="slds-modal" aria-hidden="false" role="dialog" id="spinnerModal">
                    <div class="slds-modal__container">
                        <div class="slds-modal__content slds-p-around--medium">
                            <div id="spinner" style="height: 6rem; z-index: 999">
                                <div role="status" class="slds-spinner slds-spinner_medium">
                                    <span class="slds-assistive-text">{!$Label.CD_Loading}</span>
                                    <div class="slds-spinner__dot-a"></div>
                                    <div class="slds-spinner__dot-b"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="slds-backdrop" id="backdrop1"></div>
            </div>

            <div class="slds">
                <div class="slds-modal" aria-hidden="false" role="dialog" id="thankUModal">
                    <apex:form id="deleteModalForm">
                        <div class="slds-modal__container">
                            <div class="slds-modal__header">
                                <h2 class="slds-text-heading--medium">{!$Label.CD_Thank_you_for_contacting_us}</h2>
                            </div>
                            <div class="slds-modal__footer">
                                <apex:commandButton id="closeThankUModal" reRender="none" styleClass="slds-button slds-button--brand" value="{!$Label.CD_OK}" onClick="closeThankUModal()"></apex:commandButton>
                            </div>
                        </div>
                    </apex:form>
                </div>
            </div>

        </div>

        <script>
            j$ = jQuery.noConflict();
            function openSpinnerModal(){
                j$('#backdrop1').addClass('slds-backdrop--open');
                j$('#spinnerModal').addClass('slds-fade-in-open');
            }
            //Modal Close
            function closeSpinnerModal(){
              j$('#spinnerModal').removeClass('slds-fade-in-open');
              j$('#backdrop1').removeClass('slds-backdrop--open');
            }

            function openThankUModal(){
                j$('#backdrop1').addClass('slds-backdrop--open');
                j$('#thankUModal').addClass('slds-fade-in-open');
            }
            //Modal Close
            function closeThankUModal(){
              j$('#thankUModal').removeClass('slds-fade-in-open');
              j$('#backdrop1').removeClass('slds-backdrop--open');
            }

            window.onload = function(e){
                var url = new URL(window.location.href);
                var showThankUMsg = url.searchParams.get("showThankUMsg");
                if(showThankUMsg === 'true'){
                    openThankUModal();
                }
            }

            j$('.slds-tabs--default__link,.slds-tabs--scoped__link').click(function(){
              j$(this).parent().parent().find('.slds-tabs--default__link,.slds-tabs--scoped__link').attr('aria-selected','false');
              j$(this).attr('aria-selected','true');
              j$(this).parent().parent().find('.slds-tabs--default__link,.slds-tabs--scoped__link').attr('tabindex','-1');
              j$(this).attr('tabindex','0');
              j$(this).parent().addClass('slds-active').siblings().removeClass('slds-active');
              j$(this).parent().parent().parent().find('.'+j$(this).parent().parent().parent().find('.slds-tabs--default__content,.slds-tabs--scoped__content')[0].classList[0]).removeClass('slds-show').addClass('slds-hide');
              j$(this).parent().parent().parent().find('#'+j$(this).attr('aria-controls')).removeClass('slds-hide').addClass('slds-show');
            });

        </script>

    </html>

</apex:page>